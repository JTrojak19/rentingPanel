{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tennant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tennant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tennant.name }}</td>
            </tr>
            <tr>
                <th>Workinghours</th>
                <td>{{ tennant.workinghours }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tennant.description }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td><img src="{{ vich_uploader_asset(tennant, 'imageFile', 'AppBundle\\Entity\\Tennant') }}" alt="{{ tennant.imageName }}"/></td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if tennant.updatedAt %}{{ tennant.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tennant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tennant_edit', { 'id': tennant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
